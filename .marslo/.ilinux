test -f "${iRHOME}"/.alias && source "${iRHOME}"/.alias

# git completion in linux
if isLinux; then
  isDebian && GIT_COMPLETION_DIR='/opt/git/contrib/completion'
  isFedora && GIT_COMPLETION_DIR='/usr/share/doc/git/contrib/completion'
  if compgen -G "${GIT_COMPLETION_DIR}/*git*" >/dev/null; then
    for file in "${GIT_COMPLETION_DIR}"/*git*.[bs]*h; do source "${file}"; done
  fi
fi

