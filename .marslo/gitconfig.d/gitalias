[alias]
  aa           = add --all
  sts          = status
  rb           = rebase
  co           = checkout --force --recurse-submodules
  cl           = clean -dffx
  cn           = clone --recurse-submodules --tags
  cp           = cherry-pick
  wc           = whatchanged
  gca          = gc --aggressive
  fa           = fetch --prune --prune-tags --force --all
  ma           = merge --all --progress
  psa          = push origin --all
  pst          = push origin --tags
  root         = rev-parse --show-toplevel
  first        = rev-list --max-parents=0 HEAD
  last         = cat-file commit HEAD
  undo         = reset HEAD~1 --mixed
  slap         = blame -s -w -C -M
  stt          = status -sb
  graph        = log --graph --oneline --decorate=short --branches='*'
  set-user     = "!~/.marslo/gitconfig.d/bin/set-git-user.sh --verbose"
  https-set    = "!~/.marslo/gitconfig.d/bin/https-settings.sh --on"
  https-unset  = "!~/.marslo/gitconfig.d/bin/https-settings.sh --off"
  https-status = "!~/.marslo/gitconfig.d/bin/https-settings.sh --check https"
  https-st     = !git https-status
  ssh-set      = !git https-unset
  ssh-unset    = !git https-set
  ssh-status   = "!~/.marslo/gitconfig.d/bin/https-settings.sh --check ssh"
  ssh-st       = !git ssh-status
  https-local  = "!~/.marslo/gitconfig.d/bin/https-local.sh"
  https-lunset = "!git config --local --unset-all url.\"https://github.com/\".insteadOf"

  #-----------------------#
  # pretty show           #
  #-----------------------#
  # {{{
  # -p       : show patchset ( detail contents )
  # -M       : show renames
  # --follow : all logs including before renamed
  # --stat   : show a summary of the total additions and removals for that commit
  changes     = log -M --follow --stat --
  ls          = log --stat --pretty=short --graph
  ### [p]retty [l]og(s)
  pl          = !git -c log.decorate=short --no-pager log --color --graph --abbrev-commit --date=relative --max-count=3 --pretty=tformat:"'%C(#678963)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(italic blue)<%an>%C(reset) %C(italic #6971a3)[%G?]%C(reset)'"
  pls         = !git -c log.decorate=full log  --decorate --color --graph --abbrev-commit --date=relative --pretty=tformat:"'%C(#678963)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(italic blue)<%an>%C(reset) %C(italic #6971a3)[%G?]%C(reset)'"
  ### [p]revious branch [p]retty [l]og
  ppl         = !git --no-pager log --color --graph --abbrev-commit --date=relative --max-count=3 --pretty=tformat:"'%C(#678963)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr) %C(italic blue)<%an>%C(reset) %C(italic #6971a3)[%G?]%C(reset)'" @{-1}
  ### [f]ull [p]retty [l]log
  fpl         = log --graph --abbrev-commit --decorate --format=format:"'%C(#83a598)%H%C(reset) - %C(cyan)%aD%C(reset) %C(green)(%ar)%C(reset)%C(auto)%d%C(reset)%n'""'          %C(italic white)%s%C(reset) %C(dim white)- %an%C(reset) %C(italic #6971a3)[%G?]%C(reset)'"
  fl          = log -p --graph --color --graph
  dl          = log --color --stat --abbrev-commit --date=relative --graph --submodule --format="'%C(6)%h%C(reset) %C(yellow)(%ad)%C(reset) %s %C(blue)<%an>%C(reset)'"
  revlog      = log --max-count=3 --color --graph --abbrev-commit --date=relative --notes=linrev --pretty=tformat:"'%C(bold red)%h%C(reset) -%C(yellow)%d%C(reset) %s %C(green)(%cr)%C(reset) %C(blue)<%an>%C(reset) %N'"
  ### showing all branches and their relationships
  clog        = log --color --graph --all --decorate --simplify-by-decoration --oneline
  tree        = log --color --graph --all --decorate --abbrev-commit --pretty=oneline --format=format:"'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'"
  ### [r]emote [log]
  rlog        = "!bash -c 'while read branch; do \n\
                              git fetch --all --force; \n\
                              git pl refs/remotes/origin/${branch}; \n\
                            done < <(git rev-parse --abbrev-ref HEAD); \n\
                           '"
  rlogs       = "!bash -c 'while read branch; do \n\
                              git fetch --all --force; \n\
                              git pls refs/remotes/origin/${branch}; \n\
                            done < <(git rev-parse --abbrev-ref HEAD); \n\
                           '"
  who-renamed = "!bash -c \"git log -M --summary | grep -E '^\\s*rename.*{.*=>.*}'\""
  # @deprecated
  pshow       = show -s --pretty='tformat:%C(red)%h%C(reset) %C(green)(%s)%C(reset)'
  ### [p]retty [t]ag(s)
  pt          = "!git for-each-ref --sort=-authordate refs/tags --format='%(color:6)%(objectname:short)%(color:reset) - %(align:left,38)%(color:yellow)[%(objecttype) : %(refname:short)]%(color:reset)%(end) %(subject) %(color:green)(%(if)%(taggerdate)%(then)%(taggerdate:format:%Y-%m-%d %H:%M:%S)%(else)%(committerdate:format:%Y-%m-%d %H:%M:%S)%(end))%(color:reset) %(color:blue)%(if)%(taggername)%(then)<%(taggername)>%(else)<%(committername)>%(end)%(color:reset)' --color --count=10"
  pts         = "!git for-each-ref --sort=-taggerdate refs/tags --format='%(color:6)%(objectname:short)%(color:reset) - %(color:yellow)[%(objecttype) : %(refname:short)]%(color:reset) - %(subject) %(color:green)(%(if)%(taggerdate)%(then)%(taggerdate:format:%Y-%m-%d %H:%M:%S)%(else)%(committerdate:format:%Y-%m-%d %H:%M:%S)%(end))%(color:reset) %(color:blue)%(if)%(taggername)%(then)<%(taggername)>%(else)<%(committername)>%(end)%(color:reset)' --color"
  prettytags  = "!git for-each-ref --color=always refs/tags --sort=-creatordate --format='%(align:20)%(creatordate:format:%Y-%m-%d %H:%M)%(end) %(align:18)[%(refname:short)]%(end) %(align:25)%(subject)%(end) <%(if)%(taggername)%(then)%(taggername)%(else)%(committername)%(end)>'"
  # https://stackoverflow.com/a/40480534/2940319
  show-tags   = "!bash -c 'git show-ref -d --tags | cut -b 42- | sort | sed \"s/\\^{}//\" | uniq -c | sed \"s/2\\ refs\\/tags\\// a /\" | sed \"s/1\\ refs\\/tags\\//lw /\"'"
  # to show merged tags - tags merged into current HEAD
  tshow       = "!git for-each-ref --merged HEAD refs/tags --sort=-creatordate --format='%(color:yellow)%(objectname:short)%(color:reset) - %(color:italic #9C6C83)%(creatordate:format:%Y-%m-%d %H:%M)%(color:reset) - %(color:#678963)%(refname:short)%(color:reset) %(color:#5c5c5c)# %(subject)%(color:reset)'"
  tlog        = "!git for-each-ref --sort=-creatordate --format='[%(objecttype)] - %(objectname) - %(refname:strip=2)' refs/tags"
  # https://stackoverflow.com/a/53535353/2940319
  ### [p]retty [b]ranch
  pb          = "!git for-each-ref refs/heads refs/remotes --sort=-committerdate --format='%(color:italic 203)%(objectname:short)%(color:reset) - %(color:221)%(committerdate:format:%Y-%m-%d %H:%M:%S)%(color:reset) - %(align:left,26)%(color:cyan)<%(authorname)>%(color:reset)%(end) %(color:bold red)%(if)%(HEAD)%(then)* %(else)  %(end)%(color:reset)%(refname:short)' --color --count=10"
  pbs         = "!git for-each-ref refs/heads refs/remotes --sort=-committerdate --format='%(color:italic 203)%(objectname:short)%(color:reset) - %(color:221)%(committerdate:format:%Y-%m-%d %H:%M:%S)%(color:reset) - %(align:left,26)%(color:cyan)<%(authorname)>%(color:reset)%(end) %(color:bold red)%(if)%(HEAD)%(then)* %(else)  %(end)%(color:reset)%(refname:short)' --color"
  # git for-each-ref --sort=-committerdate ${refs} --format='%(HEAD)%(color:yellow)%(refname:short)|%(color:bold green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:magenta)%(authorname)%(color:reset)' --color=always | column -ts'|'; \
  ### sort local/remote branch via committerdate (DESC). usage: $ git recent; $ git recent remotes 10
  recent      = "!f() { \
                        declare help=\"USAGE: git recent [remotes|tags] [count]\"; \
                        declare refs; \
                        declare count; \
                        if [ 2 -lt $# ]; then \
                          echo \"${help}\"; \
                          exit 1; \
                        else \
                          if [ 'remotes' = \"$1\" ]; then \
                            refs='refs/remotes/origin'; \
                          elif [ 'tags' = \"$1\" ]; then \
                            refs='refs/tags'; \
                          elif [ 1 -eq $# ]; then \
                            count=$1; \
                          fi; \
                          if [ 2 -eq $# ]; then \
                            count=$2; \
                          fi; \
                        fi; \
                        git for-each-ref \
                            --sort=-committerdate \
                            ${refs:='refs/heads'} \
                            --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(color:red)%(objectname:short)%(color:reset) - %(contents:subject) - %(authorname) %(color:green)(%(committerdate:relative))%(color:reset)' \
                            --color=always \
                            --count=${count:=5}; \
                    }; f \
                "
  # }}}

