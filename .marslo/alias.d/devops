alias gradle="gradle --full-stacktrace"
alias gradler="gradle --full-stacktrace --refresh-dependencies"
alias gcl="gradle --full-stacktrace clean"

# groovy
alias groovydock="groovydoc -classpath /opt/groovy/lib"

