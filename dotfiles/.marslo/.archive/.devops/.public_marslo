#!/bin/bash

alias cda="cd /home/appadmin"
alias cdg="cd /home/appadmin/tool-script/server_mgr/"

alias jiracat="sudo tail -f /opt/atlassian/jira/logs/catalina.out"
alias jiralog="sudo tail -f /var/atlassian/application-data/jira/log/atlassian-jira.log"
alias jopt="cd /opt/atlassian/jira"
alias jvar="cd /var/atlassian/application-data/jira"
alias jirast="sudo systemctl status jira"
alias startjira="sudo /opt/atlassian/jira/bin/start-jira.sh"
alias stopjira="sudo /opt/atlassian/jira/bin/stop-jira.sh"

alias cflscat="sudo tail -f /opt/atlassian/confluence/logs/catalina.out"
alias cflslog="sudo tail -f /var/atlassian/application-data/confluence/logs/atlassian-confluence.log"
alias copt="cd /opt/atlassian/confluence/"
alias cvar="cd /var/atlassian/application-data/confluence"
alias cflsst="sudo systemctl status confluence"
alias startcfls="sudo /opt/atlassian/confluence/bin/start-confluence.sh"
alias stopcfls="sudo /opt/atlassian/confluence/bin/stop-confluence.sh"

alias jkshome="cd /home/jenkins/jenkins_master"
alias jkscfg="cd /etc/default"
alias jkswar="cd /usr/share/jenkins"
alias ws="cd ~/workspace"

alias artihome="cd /var/opt/jfrog/artifactory"

alias startmysql="sudo systemctl start mysql"
alias stopmysql="sudo systemctl stop mysql"
alias rstmysql="sudo systemctl restart mysql"
alias lmysql="sudo mysql -u root -p"
alias mysqlconf="sudo vim /etc/mysql/my.cnf"

alias gitlab-ctl="sudo gitlab-ctl"

alias suj="sudo su - jenkins"
alias sus="sudo su -"

alias pip="pip --trusted-host pww.artifactory.cdi.philips.com"
alias etcdctl='sudo /usr/local/bin/etcdctl --ca-file /etc/kubernetes/pki/etcd/ca.pem --cert-file /etc/kubernetes/pki/etcd/client.pem --key-file /etc/kubernetes/pki/etcd/client-key.pem --endpoints https://10.69.78.40:2379,https://10.69.78.41:2379,https://10.69.78.42:2379'
